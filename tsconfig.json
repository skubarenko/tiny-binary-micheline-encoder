{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "ESNext",
    ],
    "strict": true,
    "noUncheckedIndexedAccess": false,
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "tsBuildInfoFile": "temp/tsconfig.tsbuildinfo",
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}